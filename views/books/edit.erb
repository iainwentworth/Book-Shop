<form action="/books/<%= @book.id %>" method="post">

  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @book.title %>">

  <label for="author_id">Author:</label>
  <select name="author_id">
      <% for author in @authors %>
            <option <%= 'selected' if author.id == @book.author_id %> value="<%=author.id%>"><%=author.name%></option>
      <%end %>
    </select>

  <label for="stock">Stock:</label>
  <input type="number" name="stock" value="<%= @book.stock %>">

  <label for="buying_price">Buying Price:</label>
  <input type="number" name="buying_price" value="<%= @book.buying_price %>">

  <label for="selling_price">Selling Price:</label>
  <input type="number" name="selling_price" value="<%= @book.selling_price %>">

  <input type="submit" value="Edit Book">
  
</form>
