<h1>Authors</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for author in @authors %>
  <tr>
    <td><a href="/authors/<%= author.id %>"><%= author.name %></a></td>
  <td><form action="/authors/<%= author.id %>"
    method="get">
      <input type="submit" value="Show Details">
    </form></td>
  </tr>
  <% end %>
</table>
